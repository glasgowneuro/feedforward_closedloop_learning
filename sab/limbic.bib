@Article{hadipourniktarash04,
  author =	 "Hadipour Niktarash, A. and Shahidi, GA.",
  title =	 "{Effects of the Activity of the Internal Globus
                  Pallidus-Pedunculopontine Loop on the Transmission
                  of the Subthalamic Nucleus-External Globus
                  Pallidus-Pacemaker Oscillatory Activities to the
                  Cortex}",
  abstract =	 "{Resting tremor is the most specific sign for
