@Article{majeed86,
author = "Majeed, NH. and Przewlocka, B. and Wedzony, K. and Przewlocki, R.",
title = "{Stimulation of food intake following opioid microinjection into the nucleus accumbens septi in rats}",

abstract = "{The involvement of opioid peptides in the regulation of
            food intake has been postulated. However, it is not known
